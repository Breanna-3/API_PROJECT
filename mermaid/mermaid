erDiagram
    TV_SHOWS {
        int ShowID PK %% Primary key
        string Title
        int ReleaseYear 
        int GenreID FK %% Foreign key to GENRES
    }
    GENRES {
        int GenreID PK %% Primary key
        string GenreName
    }
    EPISODES {
        int EpisodeID PK %% Primary key
        int ShowID FK %% Foreign key to TV_SHOWS
        string Title
        int Season
        int EpisodeNumber
        string AirDate
    }
    ACTORS {
        int ActorID PK %% Primary key
        string Name
        int BirthYear
    }
    SHOW_ACTORS {
        int EpisodeID FK %% Foreign key to EPISODES
        int ActorID FK %% Foreign key to ACTORS
    }

    %% Relationships
    TV_SHOWS ||--o{ EPISODES : "has" %% One show has many episodes
    TV_SHOWS }o--|| GENRES : "belongs to" %% Each shows belongs to one genres
    EPISODES ||--o{ SHOW_ACTORS : "has"
    ACTORS ||--o{ SHOW_ACTORS : "acts in"
